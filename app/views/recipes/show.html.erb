<h1 align="center">Recipe name: <%= @recipe.name.capitalize %></h1>
<hr />
<div class="well col md-8 col-md-offset-2">
  <h4 class="center-description">
    <strong>Description: </strong></h4>
    <hr />
    <%= @recipe.description %>
    <p>
      Created by:
    </p>
    <%= @recipe.user.username %>
    <div class="pull-right">Created: <%= time_ago_in_words(@recipe.created_at) %> ago</div>
</div>
